{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "The raw-news schema",
  "properties": {
    "date": {
      "type": "string",
      "format": "date"
    },
    "title": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "link": {
      "type": "string"
    },
    "symbols": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sentiment": {
      "type": "object",
      "properties": {
        "polarity": { "type": "string" },
        "neg": { "type": "string" },
        "neu": { "type": "string" },
        "pos": { "type": "string" }
      }
    }
  }
}
